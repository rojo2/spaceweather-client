{
  "rules": {
    "indent": [2,2],
    "quotes": [2,"double"],
    "linebreak-style": [2,"unix"],
    "semi": [2,"always"],
    "no-console": 0,
    "no-unused-vars": 0,
    "no-var": 2,
    "no-trailing-spaces": 1,
    "no-nested-ternary": 1
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "chai": true,
    "browser": true
  },
  "parser": "babel-eslint",
  "extends": "eslint:recommended"
}
